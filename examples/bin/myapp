#!/usr/bin/env perl
# vim:et:sts=4:sws=4:sw=4
use strict;
use warnings;
use 5.010;
use Data::Dumper;
use FindBin '$Bin';
package App::Spec::Example::MyApp;

use base 'App::Spec::Run';

sub cook {
    my ($self) = @_;
    my $param = $self->parameters;
    my $opt = $self->options;

    my $with = $opt->{with} // 'nothing';
    if ($with eq "cow milk") {
        die "Sorry, no cow milk today. go vegan\n";
    }

    say "Starting to cook $param->{drink} with $with";
}

sub weather {
}

my %countries = (
    Austria => [qw/ Vienna Salzburg /],
    Germany => [qw/ Berlin Hamburg Frankfurt /],
    Netherlands => [qw/ Amsterdam Echt /],
);

sub countries {
    say for sort keys %countries;
}

sub cities {
    my ($self) = @_;
    my $country = $self->{options}->{country};
    my @countries = defined $country ? $country : sort keys %countries;
    say for map { sort @$_ } @countries{ @countries };
}

package main;

use App::Spec;

my $spec = App::Spec->read("$Bin/../myapp-spec.yaml");
my $run = App::Spec::Example::MyApp->new({
    spec => $spec,
});
$run->run;


